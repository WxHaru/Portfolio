                                <div class="carousel-item">
                                    <img src="Design3.PNG" class="d-block w-100" alt="Coding Works Image 3">
                                </div>
                                <!-- Fourth Image -->
                                <div class="carousel-item">
                                    <img src="Design4.PNG" class="d-block w-100" alt="Coding Works Image 4">
                                </div>
                                <!-- Fifth Image -->
                                <div class="carousel-item">
                                    <img src="Design5.PNG" class="d-block w-100" alt="Coding Works Image 5">
                                </div>
                                <!-- Sixth Image -->
                                <div class="carousel-item">
                                    <img src="Design6.PNG" class="d-block w-100" alt="Coding Works Image 6">
                                </div>
                            </div>

                            <!-- Carousel Controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#project2Carousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#project2Carousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <a id="" href="/design" class="btn btn-primary">Back</a>
        </div>

    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>
</html>